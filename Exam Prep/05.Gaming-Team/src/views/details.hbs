<main id="details">
    <section id="details-info">
        <div class="game-image">
            <img src="{{image}}">
        </div>

        <div class="game-info">
            <div class="game-text">
                <h1 id="name">{{name}}</h1>
                <h3 id="platform">Platform: {{platform}}</h3>
                <p id="price"><span>Price: ${{price}}</span></p>
                <p id="genre"><span>Genre: {{genre}}</span></p>
                <p id="description">{{description}}</p>
            </div>
                {{#if isAuthenticated}}
            <div class="product-btn">
                <div class="author">
                    {{#if isOwner}}
                    <a href="/game/edit/{{_id}}" class="btn-edit">Edit</a>
                    <a href="/game/delete/{{_id}}" class="btn-delete">Delete</a>
                    {{/if}}
                    {{#unless isOwner}}
                        {{#unless isBought}}
                        <a href="/game/buy/{{_id}}" class="btn-buy">Buy</a>
                        {{else}}
                        <p class="buy-message">You have already bought this game</p>
                        {{/unless}}
                    {{/unless}}
                </div>
            </div>
                {{/if}}
        </div>
    </section>
</main>