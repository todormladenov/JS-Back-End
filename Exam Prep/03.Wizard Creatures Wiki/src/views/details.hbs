<section id="details-page">

    <div class="main_card">
        <div class="card_left">
            <div class="card_datails">

                <h1>Name: {{name}}</h1>
                <h3>Created by an author: {{owner.firstName}} {{owner.lastName}}</h3>
                <div class="card_character">
                    <p class="card-species">Species: {{species}}</p>
                    <p class="card-skin">Skin Color: {{skinColor}}</p>
                    <p class="card-eye">Eye Color: {{eyeColor}}</p>
                </div>

                <p class="disc">Description: {{description}}.</p>

                {{#if isAuthenticated}}
                <div class="social-btn">
                    {{#if isOwner}}
                    <a href="/post/edit/{{_id}}" class="edit-btn">Edit</a>
                    <a href="/post/delete/{{_id}}" class="del-btn">Delete</a>
                    {{/if}}
                        {{#unless isOwner}}
                            {{#unless isVoted}}
                            <a href="/post/vote/{{_id}}" class="vote-up">Vote</a>
                            {{else}}
                            <p class="thanks-for-vote">Thanks For Voting</p>
                            {{/unless}}
                        {{/unless}}
                </div>
                {{/if}} 
            </div>
        </div>
        <div class="card_right">
            <img src="{{image}}" alt="{{name}}">
        </div>
    </div>

</section>

<section id="votes">
    <div class="vote-info">
        <div class="card_left">
            <div class="card_datails">
                <h1>Votes</h1>
                <div class="card_vote">
                    <p class="PV">Total rating of votes: {{votes.length}}</p>
                </div>
                {{#if votedList}}
                <p class="disc">People who voted for the post - {{votedList}}</p>
                {{else}}
                <p class="disc">People who voted for the post - No one has voted yet.</p>
                {{/if}}
            </div>
        </div>
    </div>
</section>