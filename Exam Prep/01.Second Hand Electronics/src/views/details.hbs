<section id="detailsPage">
    <div id="detailsInfo">
        <h1>Name: {{name}}</h1>
        <div class="info"><img src="{{image}}"></div>

        <div class="info">
            <h3>Type: {{type}}</h3>
            <h3>Year of Production: {{production}}</h3>
            <h3>Years of Exploitation: {{exploitation}}</h3>
            <h3>Damages: {{damages}}</h3>
            <h3>Description: {{description}}</h3>
            <h2>Price: ${{price}}</h2>
        </div>
        

        <div class="buttons">

            {{#if isOwner}}
            <a href="/edit/{{_id}}" class="edit-btn">Edit</a>
            <a href="/delete/{{_id}}" class="delete-btn">Delete</a>
            {{else}}
            <a href="/buy/{{_id}}" class="buy-btn">Buy</a>
            {{/if}}

            {{#if isBought}}
            <p><span class="buy">Thank You For Your Purchase</span></p>
            {{/if}}
        </div>
    </div>
</section>