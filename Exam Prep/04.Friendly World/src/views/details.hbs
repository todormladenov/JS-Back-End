<section id="details">
    <div id="details-wrapper">
        <p id="details-title">Name: Show</p>
        <div id="img-wrapper">
            <img src="{{image}}" />
        </div>
        <div id="info-wrapper">
            <table>
                <tr>
                    <td>
                        <p>
                            Years: <span id="details-years">{{years}}</span>
                        </p>
                    </td>
                    <td>
                        <p>Kind: <span id="details-kind">{{kind}}</span></p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p>Need of: <span id="details-need">{{need}}</span></p>
                    </td>
                    <td>
                        <p>Location: <span id="details-location">{{location}}</span></p>
                    </td>
                </tr>
            </table>
            <p>Description: <span id="details-description">{{description}}</span></p>
        </div>

        {{#if isAuthenticated}}
        <div id="action-buttons">
            {{#if isOwner}}
            <a href="/animal/edit/{{_id}}" id="edit-btn">Edit</a>
            <a href="/animal/delete/{{_id}}" id="delete-btn">Delete</a>
            {{/if}}
                {{#unless isOwner}}
                    {{#unless isDonated}}
                    <a href="/animal/donate/{{_id}}" id="donation-btn">Donation</a>
                    {{else}}
                    <p id="already-donated">You already donated!</p>
                    {{/unless}}
                {{/unless}}
        </div>
        {{/if}}
    </div>
</section>