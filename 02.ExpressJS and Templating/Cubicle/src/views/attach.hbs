<h1>Attach a new accessory</h1>
<div class="form">
    <h2>{{name}}</h2>
    <img class="cube" src="{{imgUrl}}">
    <form method="POST">
        <label for="accessory">Accessories</label>
        <select id="accessory" name="accessories" />
        {{#each accessories}}
        <option value="{{_id}}">{{name}}</option>
        {{/each}}
        </select>
        <input type="submit" value="Attach">
    </form>
    <a class="btn" href="/cube/details/{{_id}}">Back</a>
</div>